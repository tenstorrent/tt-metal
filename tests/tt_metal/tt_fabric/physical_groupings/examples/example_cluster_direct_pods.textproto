# Example: Cluster Containing Pods Directly
# This example shows a cluster skipping superpods and containing pods directly

base_units {
  # Base units are predefined constants - ASIC_LOCATION_1 through ASIC_LOCATION_8
}

groupings {
  name: "trays"
  items: [
    { asic_location: ASIC_LOCATION_1 },
    { asic_location: ASIC_LOCATION_2 },
    { asic_location: ASIC_LOCATION_3 },
    { asic_location: ASIC_LOCATION_4 },
    { asic_location: ASIC_LOCATION_5 },
    { asic_location: ASIC_LOCATION_6 },
    { asic_location: ASIC_LOCATION_7 },
    { asic_location: ASIC_LOCATION_8 }
  ]
}

groupings {
  name: "hosts"
  items: [
    { grouping_ref { grouping_name: "trays" count: 4 } }
  ]
}

groupings {
  name: "meshes"
  items: [
    { grouping_ref { grouping_name: "hosts" count: 1 } }  # Each mesh = 1 host (smaller mesh example)
  ]
}

groupings {
  name: "pods"
  items: [
    { grouping_ref { grouping_name: "meshes" count: 2 } }
  ]
}

groupings {
  name: "superpods"
  items: [
    { grouping_ref { grouping_name: "pods" count: 2 } }  # Superpods still need to be defined (even if not used by clusters)
  ]
}

groupings {
  name: "clusters"
  items: [
    { grouping_ref { grouping_name: "pods" count: 6 } }  # Cluster contains 6 pods directly (skipping superpods)
  ]
}
