    constexpr unsigned VECTORS_PER_FACE = 8;
    for (unsigned i = 0; i < VECTORS_PER_FACE; i++) {
        sfpi::vFloat in = dst_reg[0];
        sfpi::vFloat result = {{ SFPU_KERNEL_NAME }}(in);

        sfpi::dst_reg[0] = result;
        sfpi::dst_reg++;
    }
